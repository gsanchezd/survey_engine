<div class="survey-breadcrumb">
  <%= link_to "← Back to Surveys", surveys_path %>
</div>

<div class="survey-completed-container">
  <h1 class="survey-completed-title">🎉 Survey Completed!</h1>
  
  <div class="survey-completed-card">
    <h2><%= @survey.title %></h2>
    <p class="survey-completed-thank-you">Thank you for completing the survey!</p>
    
    <% if @response %>
      <div class="survey-response-summary">
        <h3>Your Response Summary</h3>
        <ul>
          <li><strong>Participant:</strong> <%= @participant.email %></li>
          <li><strong>Completed:</strong> <%= @response.completed_at.strftime("%B %d, %Y at %I:%M %p") %></li>
          <li><strong>Time taken:</strong> <%= time_duration_in_words(@response.completion_time.to_i) %></li>
          <li><strong>Questions answered:</strong> <%= @response.answers.count %> of <%= @survey.questions.count %></li>
          <li><strong>Completion rate:</strong> <%= @response.completion_percentage %>%</li>
        </ul>
      </div>
    <% end %>
  </div>
  
  <% if @response&.answers&.any? %>
    <div class="survey-answers-review">
      <h3>Your Answers</h3>
      
      <% @survey.questions.ordered.each_with_index do |question, index| %>
        <% answer = @response.answer_for_question(question) %>
        <div class="survey-answer-card">
          <h4>
            <%= index + 1 %>. <%= question.title %>
          </h4>
          
          <div class="survey-answer-display">
            <% if answer %>
              <strong>Your answer:</strong> <%= answer.complete_answer %>
            <% else %>
              <em class="survey-text-muted">Not answered</em>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <div class="survey-completed-footer">
    <%= link_to "Take Another Survey", surveys_path, class: "survey-btn survey-btn-primary survey-btn-large" %>
  </div>
</div>