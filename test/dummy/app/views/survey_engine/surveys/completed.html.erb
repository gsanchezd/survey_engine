<div class="survey-container">
  <nav class="survey-breadcrumb">
    <%= link_to "â† Back to Surveys", surveys_path, class: "survey-link" %>
  </nav>

  <div class="survey-completion-page">
    <header class="survey-completion-header">
      <h1 class="survey-success-title">ðŸŽ‰ Survey Completed!</h1>
    </header>
    
    <div class="survey-completion-card">
      <h2><%= @survey.title %></h2>
      <p class="survey-thank-you">Thank you for completing the survey!</p>
      
      <% if @response %>
        <div class="survey-responsurvey-summary">
          <h3>Your Response Summary</h3>
          <dl class="survey-summary-list">
            <dt>Participant:</dt>
            <dd><%= @participant.email %></dd>
            
            <dt>Completed:</dt>
            <dd><%= @response.completed_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
            
            <dt>Time taken:</dt>
            <dd><%= time_duration_in_words(@response.completion_time.to_i) %></dd>
            
            <dt>Questions answered:</dt>
            <dd><%= @response.answers.count %> of <%= @survey.questions.count %></dd>
            
            <dt>Completion rate:</dt>
            <dd><%= @response.completion_percentage %>%</dd>
          </dl>
        </div>
      <% end %>
    </div>
    
    <% if @response&.answers&.any? %>
      <section class="survey-answers-review">
        <h3>Your Answers</h3>
        
        <% @survey.questions.ordered.each_with_index do |question, index| %>
          <% answer = @response.answer_for_question(question) %>
          <article class="survey-answer-card">
            <h4 class="survey-question-title">
              <%= index + 1 %>. <%= question.title %>
            </h4>
            
            <div class="survey-answer-display">
              <% if answer %>
                <strong>Your answer:</strong> <%= answer.complete_answer %>
              <% else %>
                <em class="survey-text-muted">Not answered</em>
              <% end %>
            </div>
          </article>
        <% end %>
      </section>
    <% end %>
    
    <footer class="survey-completion-footer">
      <%= link_to "Take Another Survey", surveys_path, 
          class: "survey-btn survey-btn-primary" %>
    </footer>
  </div>
</div>